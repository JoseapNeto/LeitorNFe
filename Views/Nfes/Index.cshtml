@model IEnumerable<AppLeitorNfe.Models.Nfe>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem NFe</h2>

<p>
    @Html.ActionLink("Novo NFe", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        
        
        <th>
            Número da Nota
        </th>
        <th>
            Chave de Acesso
        </th>
        <th>
            Data da Emissão
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.nNF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chNFe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dhEmi)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Detalhes", "Details", new { id = item.id }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Deletar", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
